<div class="container mt-5">
  <h2 class="text-center mb-4">Connexion</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
        <div class="form-inputs mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { class: "form-control", autocomplete: "email", placeholder: "Entrez votre email" },
                      label_html: { class: "form-label" } %>

          <%= f.input :password,
                      required: false,
                      input_html: { class: "form-control", autocomplete: "current-password", placeholder: "Entrez votre mot de passe" },
                      label_html: { class: "form-label" } %>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mt-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>
        </div>

        <div class="form-actions d-grid gap-2">
          <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
